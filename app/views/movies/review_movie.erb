<form action="/submit_logout" method="post">
  <input type="submit" value="Log Out!">
</form>


<div class="block block-inverse">
  <div class="container">
    <h1 class="text-xs-center"><%= @movie.title %></h1>
    <div><img class="center-block" src="<%= @movie.image_name %>"></div>
    <br>
    <div class="row">

      <div class="col-sm-12 col-md-2">
        <form action="/submit_movie_review/<%= @movie.id %>/<%= @current_user.id %>/1" method="post"> 
          <input type="button" class="btn btn-lg btn-pill btn-default" value="1 STAR">
        </form>
      </div>

      <div class="col-sm-12 col-md-2">
        <form action="/submit_movie_review/<%= @movie.id %>/<%= @current_user.id %>/2" method="post"> 
