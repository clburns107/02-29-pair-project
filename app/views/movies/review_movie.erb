This page will display the movie info stored in database and buttons that allow a user to score it. 

<% if @movie_search == nil %>
  <h1><%= @new_movie.title %></h1>
  <p><img src="<%= @new_movie.image_name %>"></p>
<% else %>
  <h1><%= @movie_search.title %></h1>
  <p><img src="<%= @movie_search.image_name %>"></p>
<% end %>

  <table border="0">
  <tr>
    <td>
      <form action="/submit_vote_1">
        <input type="submit" value="1 STAR">
      </form>
    </td>

    <td>
      <form action="/submit_vote_2">
        <input type="submit" value="2 STARS">
      </form>
    </td>

    <td>
      <form action="/submit_vote_3">
        <input type="submit" value="3 STARS">
      </form>
    </td>

    <td>
      <form action="/submit_vote_4">
        <input type="submit" value="4 STARS">
      </form>
    </td>

    <td>
      <form action="/submit_vote_5">
        <input type="submit" value="5 STARS">
      </form>
    </td>

  </tr>
</table>


<form action="/update_movie/<%
  if @movie_search == nil %>
    <%= @new_movie.id %>
  <% else %>
    <%= @movie_search.id %>
  <% end %>">
  <input type="submit" value="Update Movie">
</form>


