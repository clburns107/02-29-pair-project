        </form>  
      </div>

      <div class="col-sm-12 col-md-2">
        <form action="/submit_movie_review/<%= @movie.id %>/<%= @current_user.id %>/3" method="post"> 
          <input type="button" class="btn btn-lg btn-pill btn-default" value="3 STAR">
        </form>
      </div>

      <div class="col-sm-12 col-md-2">
        <form action="/submit_movie_review/<%= @movie.id %>/<%= @current_user.id %>/4" method="post"> 
          <input type="button" class="btn btn-lg btn-pill btn-default" value="4 STAR">
        </form>
      </div>

      <div class="col-sm-12 col-md-2">
        <form action="/submit_movie_review/<%= @movie.id %>/<%= @current_user.id %>/5" method="post"> 
          <input type="button" class="btn btn-lg btn-pill btn-default" value="5 STAR">
        </form>
      </div>


      <div class="col-sm-12 col-md-2"></div>
        <form action="/update_movie/<%= @movie.id %>">
          <input type="button" class="btn btn-lg btn-pill btn-warning" value="Update">
        </form>
      </div>
    </div>

  </div>
